<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="14dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_recycler_market"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:text="BTC"
        style="@style/CoinBitText.Body1"
        android:id="@+id/txt_coin_name_market"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toEndOf="@+id/img_item_recycler_market"
        app:layout_constraintBottom_toTopOf="@+id/txt_change_market"
        app:layout_constraintTop_toTopOf="@+id/img_item_recycler_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_change_market"
        android:text="Coinbase"
        style="@style/CoinBitText.Body1Alternate"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_recycler_market"
        app:layout_constraintTop_toBottomOf="@+id/txt_coin_name_market"
        app:layout_constraintStart_toStartOf="@+id/txt_coin_name_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/CoinBitText.Body1"
        android:layout_marginBottom="2dp"
        android:text="$3.185"
        app:layout_constraintBottom_toTopOf="@+id/txt_num_change_market"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_item_recycler_market"
        android:id="@+id/txt_price_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/CoinBitText.Body1Alternate"
        android:layout_marginBottom="2dp"
        android:text="$2.4 million"
        app:layout_constraintEnd_toEndOf="@+id/txt_price_market"
        app:layout_constraintTop_toBottomOf="@+id/txt_price_market"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_recycler_market"
        android:id="@+id/txt_num_change_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>